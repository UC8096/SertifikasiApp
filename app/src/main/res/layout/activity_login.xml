<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"

                android:gravity="center"
                android:text="@string/welcome_to_pendaftaran"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/mari_daftarkan_data_diri_kamu"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonlogin"
                android:layout_width="600px"
                android:layout_height="170px"
                android:layout_marginBottom="20px"
                android:background="@color/purple_200"
                android:drawableRight="@drawable/outline_fingerprint_24"
                android:drawableTint="@color/white"
                android:fontFamily="@font/poppins"
                android:text="Login As Guest"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonloginAdmin"
                android:layout_width="600px"
                android:layout_height="170px"
                android:layout_marginBottom="500px"
                android:drawableTint="@color/white"
                android:fontFamily="@font/poppins"
                android:drawableRight="@drawable/round_admin_panel_settings_24"
                android:text="Login As Admin" />
        </LinearLayout>

</LinearLayout>